<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EliteEscapes - Luxury Stays</title>
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

</head>
<body>
<!-- Flatpickr CDN -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
  flatpickr("#checkin", {
    dateFormat: "d-m-Y"
  });

  flatpickr("#checkout", {
    dateFormat: "d-m-Y"
  });
</script>


    
    <% if (user) { %>
        <div class="login-notice">
          Logged in as <%= user.firstName %> <%= user.lastName %>
        </div>
      <% } %>
      
    <!-- Header Section -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo-container">
                    <h1 class="logo">EliteEscapes</h1>
                    <span class="tagline">Luxury Stays</span>
                </div>
                <div class="header-right">
                    
                    <img src="img1.jpg" alt="User" class="user-icon">
                    <% if (user) { %>
                        <!-- Logged in: show profile icon with first letter -->
                        <div class="profile-initial" title="<%= user.firstName + ' ' + user.lastName %>">
                          <%= user.firstName.charAt(0).toUpperCase() %>
                        </div>
                      <% } else { %>
                        <!-- Not logged in: show login/register -->
                        <div class="auth-buttons">
                          <a href="/register" class="register-btn">Register</a>
                          <a href="/login" class="login-btn">Log in</a>
                        </div>
                      <% } %>
                      
                </div>
            </div>
        </div>
    </header>

    <!-- Navigation Section -->
    <nav class="main-nav">
        <div class="container">
            <ul class="nav-list">
                <li class="nav-item active">
                    <a href="#" class="nav-link">
                        <i class="fas fa-hotel"></i>
                        Stays
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/flights" class="nav-link">
                        <i class="fas fa-plane"></i>
                        Flights
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-box"></i>
                        Packages
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/my-bookings" class="nav-link">
                      <i class="fas fa-calendar-check"></i>
                      My Bookings
                    </a>
                  </li>
                  
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-monument"></i>
                        Attractions
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-taxi"></i>
                        Airport taxis
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Search Section -->
<section class="search-section">
    <div class="container">
      <form action="/search" method="POST">
        <div class="search-container">
          <div class="search-box">
            <!-- Destination -->
            <div class="search-input-group">
              <i class="fas fa-map-marker-alt"></i>
              <input type="text" name="destination" placeholder="Where are you going?" class="search-input" required>
            </div>
  
            <!-- Date Range -->
          <!-- Check-in -->
<div class="search-input-group">
    <i class="far fa-calendar-alt"></i>
    <input type="text" name="checkin" id="checkin" class="search-input" placeholder="Check-in date" required>
  </div>
  
  <!-- Check-out -->
  <div class="search-input-group">
    <i class="far fa-calendar-alt"></i>
    <input type="text" name="checkout" id="checkout" class="search-input" placeholder="Check-out date" required>
  </div>
  
  
            <!-- Guests -->
            <div class="search-input-group">
              <i class="fas fa-user-friends"></i>
              <input type="text" name="guests" placeholder="2 adults · 0 children · 1 room" class="search-input guest-input" required>
            </div>
  
            <!-- Submit -->
            <button class="search-btn" type="submit">Search</button>
          </div>
  
          <!-- Flights Checkbox -->
          <div class="search-options">
            <label class="search-checkbox">
              <input type="checkbox" name="flights">
              <span>I'm looking for flights</span>
            </label>
          </div>
        </div>
      </form>
    </div>
  </section>
  

    <!-- Special Offers Section -->
    <section class="offers-section">
        <div class="container">
            <h2 class="section-title">Special Offers</h2>
            <p class="section-subtitle">Promotions, deals, and special offers for you</p>
            
            <div class="offers-container">
                <div class="offer-card">
                    <div class="offer-content">
                        <img src="/images/monsoon-offer.jpg" alt="Monsoon Offer" class="offer-image">
                        <div class="offer-details">
                            <h3 class="offer-title">Monsoon Getaway Deals</h3>
                            <p class="offer-description">Start your journey with an adventure, saving 15% or more with our Monsoon Special.</p>
                            <a href="#" class="offer-btn">Save 15% or more</a>
                        </div>
                    </div>
                </div>
                
                <div class="offer-card">
                    <div class="offer-content">
                        <img src="/images/heritage-offer.jpg" alt="Heritage Offer" class="offer-image">
                        <div class="offer-details">
                            <h3 class="offer-title">Heritage Property Discount</h3>
                            <p class="offer-description">Experience royal living in our heritage properties with 20% off on weekend stays.</p>
                            <a href="#" class="offer-btn">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="explore-section">
        <div class="container">
          <h2 class="section-title">Explore India</h2>
          <p class="section-subtitle">Discover the beauty and diversity of incredible India</p>
      
          <div class="category-filters">
            <button class="category-btn active" data-category="heritage">
              <i class="fas fa-landmark"></i> Heritage
            </button>
            <button class="category-btn" data-category="hill">
              <i class="fas fa-mountain"></i> Hill Stations
            </button>
            <button class="category-btn" data-category="beach">
              <i class="fas fa-umbrella-beach"></i> Beaches
            </button>
            <button class="category-btn" data-category="spiritual">
              <i class="fas fa-om"></i> Spiritual
            </button>
          </div>
      
          <div class="destinations-grid">
            <!-- Heritage -->
            <div class="destination-card heritage">
              <img src="/images/jaipur.jpg" alt="Jaipur" class="destination-image" />
              <div class="destination-overlay">
                <h3 class="destination-name">Jaipur</h3>
              </div>
            </div>
            <div class="destination-card heritage">
              <img src="/images/udaipur.jpg" alt="Udaipur" class="destination-image" />
              <div class="destination-overlay">
                <h3 class="destination-name">Udaipur</h3>
              </div>
            </div>
      
            <!-- Hill Stations -->
            <div class="destination-card hill">
              <img src="/images/darjeeling.jpg" alt="Darjeeling" class="destination-image" />
              <div class="destination-overlay">
                <h3 class="destination-name">Darjeeling</h3>
              </div>
            </div>
            <div class="destination-card hill">
              <img src="/images/manali.jpg" alt="Manali" class="destination-image" />
              <div class="destination-overlay">
                <h3 class="destination-name">Manali</h3>
              </div>
            </div>
      
            <!-- Beaches -->
            <div class="destination-card beach">
              <img src="/images/goa.jpg" alt="Goa" class="destination-image" />
              <div class="destination-overlay">
                <h3 class="destination-name">Goa</h3>
              </div>
            </div>
            <div class="destination-card beach">
              <img src="/images/kerala.jpg" alt="Kerala" class="destination-image" />
              <div class="destination-overlay">
                <h3 class="destination-name">Kerala</h3>
              </div>
            </div>
      
            <!-- Spiritual -->
            <div class="destination-card spiritual">
              <img src="/images/varanasi.jpg" alt="Varanasi" class="destination-image" />
              <div class="destination-overlay">
                <h3 class="destination-name">Varanasi</h3>
              </div>
            </div>
            <div class="destination-card spiritual">
              <img src="/images/rishikesh.jpg" alt="Rishikesh" class="destination-image" />
              <div class="destination-overlay">
                <h3 class="destination-name">Rishikesh</h3>
              </div>
            </div>
          </div>
        </div>
      </section>
      
    
    <!-- Property Types Section -->
    <section class="property-types-section">
        <div class="container">
            <h2 class="section-title">Browse by Property Type</h2>
            <p class="section-subtitle">Find your perfect stay across India</p>
            
            <div class="property-types-grid">
                <div class="property-type-card">
                    <img src="/images/luxury-hotels.jpg" alt="Luxury Hotels" class="property-type-image">
                    <div class="property-type-details">
                        <h3 class="property-type-title">Luxury Hotels</h3>
                        <p class="property-type-count">1,254 properties</p>
                    </div>
                </div>
                
                <div class="property-type-card">
                    <img src="/images/heritage-palaces.jpg" alt="Heritage Palaces" class="property-type-image">
                    <div class="property-type-details">
                        <h3 class="property-type-title">Heritage Palaces</h3>
                        <p class="property-type-count">432 properties</p>
                    </div>
                </div>
                
                <div class="property-type-card">
                    <img src="/images/resorts.jpg" alt="Resorts" class="property-type-image">
                    <div class="property-type-details">
                        <h3 class="property-type-title">Resorts</h3>
                        <p class="property-type-count">876 properties</p>
                    </div>
                </div>
                
                <div class="property-type-card">
                    <img src="/images/homestays.jpg" alt="Homestays" class="property-type-image">
                    <div class="property-type-details">
                        <h3 class="property-type-title">Homestays</h3>
                        <p class="property-type-count">1,543 properties</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

